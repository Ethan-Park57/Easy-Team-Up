<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/to_sent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="56dp"
        android:text="Sent Invitations"
        app:layout_constraintBottom_toTopOf="@+id/to_registered_button"
        app:layout_constraintStart_toStartOf="@+id/to_registered_button" />

    <Button
        android:id="@+id/to_registered_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="61dp"
        android:text="Registered Events"
        app:layout_constraintBottom_toTopOf="@+id/to_received_button"
        app:layout_constraintStart_toStartOf="@+id/to_received_button" />

    <Button
        android:id="@+id/to_received_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="250dp"
        android:text="Received Invitations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>